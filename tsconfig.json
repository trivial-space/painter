{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "suppressImplicitAnyIndexErrors": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**",
    "!jspm_packages/**"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
