{
	"rules": {
		"ordered-imports": true,
		"no-duplicate-variable": true,
		"no-unused-variable": true,
		"curly": [true, "ignore-same-line"],
		"class-name": true,
		"semicolon": [
			true,
			"never"
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape",
			"jsx-double"
		],
		"no-var-keyword": true,
		"trailing-comma": [ true, {"multiline": "never", "singleline": "never"} ],
		"prefer-for-of": true,
		"prefer-const": true,
		"no-unused-expression": false,
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-module",
			"check-operator",
			"check-preblock",
			"check-separator",
			"check-type",
			"check-typecast"
		]
	}
}
