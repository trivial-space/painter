{
    "extend": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": [2, "never"],
        "no-unused-vars": 1,
        "no-undef": 2,
        "no-const-assign": 2,
        "no-class-assign": 2
    },
    "globals": {
        "expect": true,
        "sinon": true,
        "Float32Array": true
    },
    "env": {
        "browser": true,
        "mocha": true,
        "commonjs": true
    }
}
