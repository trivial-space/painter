{
	"name": "tvs-painter",
	"version": "0.1.0",
	"description": "trivialspace painter - a low level webgl rendering engine optimized for live coding and post processing",
	"main": "dist/tvs-painter.js",
	"esnext:main": "dist/index.js",
	"jsnext:main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/trivial-space/painter.git"
	},
	"keywords": [
		"webgl",
		"graphics engine",
		"live coding",
		"post processing"
	],
	"scripts": {
		"dev": "webpack-dev-server --config webpack.examples.config.js --port 8081",
		"examples": "npm run dev",
		"build": "tsc -p \"./tsconfig.build.json\"; webpack",
		"prepublish": "npm run build"
	},
	"author": "Thomas Gorny",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/trivial-space/painter/issues"
	},
	"homepage": "https://github.com/trivial-space/painter#readme",
	"dependencies": {
		"tvs-libs": "^0.5.0"
	},
	"devDependencies": {
		"@types/gl-matrix": "^2.4.4",
		"@types/node": "^10.12.18",
		"@types/webgl2": "^0.0.4",
		"gl-matrix": "2.8.1",
		"glsl-fast-gaussian-blur": "^1.0.2",
		"glslify-loader": "^2.0.0",
		"primitive-cube": "^2.0.1",
		"primitive-sphere": "^3.0.0",
		"raw-loader": "^1.0.0",
		"ts-loader": "^5.3.2",
		"tslint": "^5.12.0",
		"tslint-config-prettier": "^1.17.0",
		"tslint-config-standard": "^8.0.1",
		"typescript": "^3.2.2",
		"uglifyjs-webpack-plugin": "^2.1.1",
		"webpack": "^4.28.3",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.14"
	}
}
